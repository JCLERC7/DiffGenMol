{
    "name": "DiffGenMol-Selfies-LogP",
    "n_gpu": 1,
    "save_dir": "saved/",

    "data_loader": {
        "type": "QM9DataLoader",
        "args":{
            "dataset_size" : 152100,
            "min_smiles_size" : 1,
            "max_smiles_size" : 100,
            "batch_size": 16,
            "num_classes" : 3,
            "type_property": "LogP",
            "shuffle": true
        }
    },
    "trainer": {
        "type": "Trainer1D",
        "args":{
            "timesteps": 1000,
            "train_num_steps": 1000000,
            "train_lr": 8e-5,
            "unet_dim": 128,
            "unet_channels" : 1,
            "unet_cond_drop_prob" : 0.5,
            "eval_and_sample_every" : 2000,
            "save_model_every" : 50000,
            "num_samples" : 100,
            "objective" : "pred_noise",
            "beta_schedule" : "cosine",
            "amp" : true,
            "tensorboard" : true
        }
    }
}
